{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "node esbuild.config.js",
      "group": { "kind": "build", "isDefault": true },
      "presentation": { "reveal": "silent", "panel": "shared" },
      "problemMatcher": "$tsc"
    },
    {
      "label": "watch",
      "type": "shell",
      "command": "node esbuild.config.js --watch",
      "group": "build",
      "isBackground": true,
      "presentation": { "reveal": "always", "panel": "dedicated" },
      "problemMatcher": {
        "owner": "esbuild",
        "pattern": { "regexp": "^(.*):(\\d+):(\\d+): (error|warning): (.*)$" },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^\\[esbuild\\] watching",
          "endsPattern": "^\\[esbuild\\] rebuild"
        }
      }
    }
  ]
}
